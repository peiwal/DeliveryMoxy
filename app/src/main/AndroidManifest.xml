<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="petrov.ivan.deliverymobile">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="petrov.ivan.deliverymobile.application.ClientApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="petrov.ivan.deliverymobile.ui.MainActivity"
                android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.fragment.delivery.ProductInfoActivity"/>
    </application>

</manifest>