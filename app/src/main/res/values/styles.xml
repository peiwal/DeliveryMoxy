<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">4dp</item>
    </style>

    <style name="TexTitle" parent="TextAppearance.MaterialComponents.Headline1" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TexTitleSmallAccent" parent="TextAppearance.MaterialComponents.Headline1" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="TextSecondary" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="round">5dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ButtonCost" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/backgrkoud_theme_button_cost</item>
    </style>

</resources>
